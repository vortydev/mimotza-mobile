<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mimotza">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mmz_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/mmz_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mimotza"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Connexion"
            android:label="@string/connexion"
            android:exported="false" />
        <activity
            android:name=".ProfilJoueur"
            android:label="@string/profil"
            android:exported="false" />
        <activity
            android:name=".Jeu"
            android:exported="false"
            android:label="@string/jeu_label" />
        <activity
            android:name=".TestBd"
            android:exported="false"
            android:label="@string/title_activity_test_bd"
            android:theme="@style/Theme.Mimotza.NoActionBar" />
        <activity
            android:name=".Inscription"
            android:label="@string/inscription"
            android:exported="false" />
        <activity
            android:name=".LogInSignIn"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ForumActivity"
            android:exported="false"
            android:label="@string/forum_label" />
        <activity
            android:name=".ThreadActivity"
            android:exported="false"
            android:label="@string/thread_label" />
        <activity
            android:name=".MessReponseActivity"
            android:exported="false"
            android:label="@string/reponse_label" />
    </application>

</manifest>