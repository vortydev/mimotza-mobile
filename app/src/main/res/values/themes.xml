<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mimotza" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gris</item>
        <item name="colorPrimaryVariant">@color/gris_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bleu</item>
        <item name="colorSecondaryVariant">@color/bleu_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/charcoal</item>
    </style>
    <style name="Button.Bleu" parent="@android:style/Widget.Button">
        <item name="android:background">@empty</item>
        <item name="android:backgroundTint">@color/bleu</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/trebuchet</item>
    </style>
    <style name="Button.Gris" parent="@android:style/Widget.Button">
        <item name="android:background">@empty</item>
        <item name="android:backgroundTint">@color/gris</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/trebuchet</item>
    </style>
</resources>