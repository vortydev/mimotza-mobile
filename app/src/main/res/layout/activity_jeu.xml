                android:background="@drawable/cell_bad"
                android:text="@string/lettre_i" />

            <TextView
                android:id="@+id/r1l4"
                style="@style/MMZ.Game.Cell"
                android:background="@drawable/cell_bad"
                android:text="@string/lettre_o" />

            <TextView
                android:id="@+id/r1l5"
                style="@style/MMZ.Game.Cell"
                android:background="@drawable/cell_bad"
                android:text="@string/lettre_n" />
