    <LinearLayout
        android:id="@+id/postGameBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grille">

        <Button
            android:id="@+id/btnSuggestion"
            style="@style/MMZ.Button.Gris"
            android:layout_width="175dp"
            android:layout_marginBottom="50dp"
            android:text="@string/suggerer"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnNextMot"
            style="@style/MMZ.Button.Bleu"
            android:text="@string/nextmot" />

        <Button
            android:id="@+id/btnRetourJeu"
            style="@style/MMZ.Button.Bleu"
            android:text="@string/retour" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>